<body>
<header>
    <style>
        .h2 {
            font-family: sans-serif;
            font-size: 30px;
            text-align: center
        }

        .h3 { text-align: center;
           
        }
        .h4 { text-align: center;
            font-size: 16px;
        }
        .card-header {
         background-color: #14477d;
         padding-top: 0;
         padding-bottom: 0   
        }
        .card-body {
            background-color: lightcyan;
        }
        
    </style>
    <div style="padding: 20px; font-size: 24px;background-color: lightgrey">
        <span style="padding: 20px"><a href="@Url.Action("Index", "Home")" title="Go to home">Home</a></span>
        <span style="padding: 20px"><a href="@Url.Action("Index", "QueryEdit")" title="QueryEdit">QueryEdit</a></span>
        <span style="padding: 20px"><a href="@Url.Action("Index", "Swagger")" title="Swagger">Swagger</a></span>

